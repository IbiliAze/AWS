{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "FirstInstance EC2 Description",
  "Outputs": {
    "InstanceAZ": {
      "Description": "FirstInstance AZ",
      "Value": {
        "Fn::GetAtt": [
          "FirstInstance",
          "AvailabilityZone"
        ]
      }
    },
    "InstanceID": {
      "Description": "FirstInstance ID",
      "Value": {
        "Ref": "FirstInstance"
      }
    }
  },
  "Parameters": {
    "InstanceType": {
      "AllowedValues": [
        "t2.micro",
        "t2.nano"
      ],
      "Default": "t2.micro",
      "Description": "EC2 Instance Type",
      "Type": "String"
    },
    "KeyName": {
      "ConstraintDescription": "Must be the name of an existing SSH Key Pair",
      "Description": "SSH Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    }
  },
  "Resources": {
    "FirstInstance": {
      "Properties": {
        "ImageId": "ami-09d95fab7fff3776c",
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Ref": "KeyName"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "FirstInstance CloudFormation Template"
          }
        ]
      },
      "Type": "AWS::EC2::Instance"
    },
    "FirstInstanceSecurityGroup": {
      "Properties": {
        "GroupDescription": "Enable SSH via TCP port 22",
        "SecurityGroupIngress": {
          "CidrIp": "0.0.0.0/0",
          "FromPort": "22",
          "IpProtocol": "tcp",
          "ToPort": "22"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    }
  }
}